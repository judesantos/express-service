<div class="row">
  <div class="col col-md-5 offset-md-3 col-lg-4 offset-lg-4">
    <h3>Sign up</h3>
    {{#if error }}
    <p class="alert alert-danger" style="font-size:0.8rem;padding:10px !important;">
      {{ loud error }}
    </p>
    {{/if}}
    <form action="/sign-up" method="POST">
      <div class="card mb-3">
        <div class="card-header">
          User
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="fullName">
              Full Name
              <span class="text-danger">*</span>
            </label>
            <input name="fullName" id="fullName" type="text"
              class="form-control {{#if fullName.error }} error-element {{/if}}" value="{{ fullName.value }}">
            {{#if fullName.error }}
            <p class="error-msg">{{{ fullName.msg }}}</p>
            {{/if}}
          </div>
          <div class="form-group">
            <label for="email">
              Email
              <span class="text-danger">*</span>
            </label>
            <input name="email" id="email" type="text" class="form-control {{#if email.error }} error-element {{/if}}"
              value="{{ email.value }}">
            {{#if email.error }}
            <p class="error-msg">{{{ email.msg }}}</p>
            {{/if}}
          </div>
          <div class="form-group">
            <label for="password">
              Password
              <span class="text-danger">*</span>
            </label>
            <input name="password" id="password" type="password"
              class="form-control {{#if password.error }} error-element {{/if}}" value="{{ passwoed.value }}">
            {{#if password.error }}
            <p class="error-msg">{{{ password.msg }}}</p>
            {{/if}}
          </div>
          <div class="form-group">
            <label for="confirmPassword">
              Confirm Password
              <span class="text-danger">*</span>
            </label>
            <input name="confirmPassword" id="confirmPassword" type="password"
              class="form-control {{#if confirmPassword.error }} error-element {{/if}}"
              value="{{ confirmPassword.value }}">
            {{#if confirmPassword.error }}
            <p class="error-msg">{{{ confirmPassword.msg }}}</p>
            {{/if}}
          </div>
        </div>
      </div>
      <div class="button-group">
        <button class="btn btn-primary">
          Create Account
        </button>
      </div>
    </form>
  </div>
</div>
